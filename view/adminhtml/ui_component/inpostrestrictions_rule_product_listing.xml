<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">inpostrestrictions_rule_product_listing.inpostrestrictions_rule_product_listing_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>inpostrestrictions_rule_product_columns</spinner>
		<deps>
			<dep>inpostrestrictions_rule_product_listing.inpostrestrictions_rule_product_listing_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource name="inpostrestrictions_rule_product_listing_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">index_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<dataProvider name="inpostrestrictions_rule_product_listing_listing_data_source"
                      class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>index_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="inpostrestrictions_rule_product_columns">
		<column name="index_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
        <column name="rule_id" class="InPost\Restrictions\Ui\Component\Listing\Column\RestrictionsRuleOptions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Rule</item>
                </item>
                <item name="options" xsi:type="object">InPost\Restrictions\Model\Source\RestrictionsRule</item>
            </argument>
            <settings>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Restrictions Rule</label>
                <options class="InPost\Restrictions\Model\Source\RestrictionsRule"/>
            </settings>
        </column>
        <column name="website_id" class="InPost\Restrictions\Ui\Component\Listing\Column\WebsiteOptions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Website</item>
                </item>
                <item name="options" xsi:type="object">InPost\Restrictions\Model\Source\Store\Website</item>
            </argument>
            <settings>
                <filter>text</filter>
                <label translate="true">Website</label>
            </settings>
        </column>
        <column name="product_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Product ID</label>
            </settings>
        </column>
        <column name="applies_to" class="InPost\Restrictions\Ui\Component\Listing\Column\AppliesToOptions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Applies To</item>
                </item>
                <item name="options" xsi:type="object">InPost\Restrictions\Model\Source\RestrictionsRule\AppliesTo</item>
            </argument>
            <settings>
                <filter>text</filter>
                <label translate="true">Applies To</label>
            </settings>
        </column>
	</columns>
</listing>
